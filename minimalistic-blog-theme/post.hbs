{{!< default}}

        <div class="container clearfix">
          <main role="main" class="content">

              {{#post}}
              <article class="{{post_class}} post">
                <a class="btn" href="{{@blog.url}}" title="Back to homepage">&laquo; Back to home</a>
                <h1>{{title}}</h1>
                <!-- <h1><a href="{{url}}" title="{{title}}">{{title}}</a></h1> -->
                <footer class="post-info">Published on <span class="post-meta"><time datetime="{{date published_at format="YYYY-MM-DD"}}">{{date published_at format="Do MMMM YYYY"}}</time> {{tags separator=", " prefix= "// tagged in "}}</span></footer>

                {{#if feature_image}}
                  <img src={{img_url feature_image}} />
                {{/if}}

                {{content}}

              </article>
              {{/post}}

          </main>
        </div>
